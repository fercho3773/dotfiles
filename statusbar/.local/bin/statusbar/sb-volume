#!/bin/bash

vol="$(amixer get Master | awk -F'[][]' '/%/{print $2; exit}' | tr -d '%')"
#vmute="$(amixer get Master | awk -F'[][]' '/%/{print $4; exit}')"
vmute="$(amixer get Master | awk -F'[][]' '/%/{print $6; exit}')"

# If muted, print MUTE and exit.
[ "$vmute" = "off" ] && echo "MUTE" && exit

volprint="$(printf $vol  )"

case 1 in
	$((vol >= 70)) ) icon="ðŸ”Š" ;;
	$((vol >= 30)) ) icon="ó°–€" ;;
	$((vol >= 1)) )  icon="ðŸ”ˆ" ;;
	* ) echo "XX" && exit ;;
esac

echo "$icon$volprint"
