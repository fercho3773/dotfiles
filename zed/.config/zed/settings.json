// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "project_panel": {
      "dock": "left"
  },
    "assistant": {
      "dock": "left",
      "version": "2",
      "enabled": false
  },
  "assistant_v2": {
      "enabled": false
  },
  "chat_panel": {
      "dock": "left",
      "button": false
  },
  "notification_panel": {
      "dock": "left",
      "button": false
  },
  "collaboration_panel": {
      "dock": "left",
      "button": false
  },
  "features": {
      "inline_completion_provider": "none",
      "copilot": false,
  },
  "icon_theme": "Zed (Default)",
  "features": {
    "edit_prediction_provider": "none"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "cursor_shape": "hollow",
  "ui_font_size": 18,
  "ui_font_weight": 500,
  "buffer_font_size": 18,
  "buffer_font_weight": 400,
  "buffer_line_height": { "custom": 1.15 },
  "theme": {
    "mode": "system",
    "light": "Atelier Plateau Light",
    "dark": "One Dark",
    "font_family": "Hack Nerd Font Mono",
    "line_height": 1,
    "tab_size": 1,
    "auto_save": true,
    "auto_indent": true,
    "word_wrap": true
  },
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_text": true,
    "selected_symbol": true,
    "diagnostics": "all",
    "axes": {
      "horizontal": true,
      "vertical": true
    }
  },
  "ui_font_family": "Hack Nerd Font Mono",
  "buffer_font_family": "Hack Nerd Font Mono",
  "relative_line_numbers": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "restore_on_startup": "last_workspace",
  "languages": {
    "LaTeX": {
      "format_on_save": "language_server"
    }
  },
  "indent_guides": {
    "enabled": true
  },
  "soft_wrap": "editor_width",
  "lsp": {
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "onSave": true,
            "forwardSearchAfter": true
          },
          "forwardSearch": {
            "executable": "sioyek",
            "args": [
                "--reuse-window",
            		"--forward-search-file", "%f",
            		"--forward-search-line", "%l",
            		"%p"              
            ]
          }
        }
      }
    }
  }
}
